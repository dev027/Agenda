@using Agenda.Web.Models
@using Agenda.Web.ViewModels.Committee
@model IndexViewModel

@section BreadCrumb
{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <span class="@Icon.Organisation"></span>
                <a asp-controller="OrganisationOverview"
                   asp-action="Index">Organisations</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-controller="Organisation"
                   asp-action="Index"
                   asp-route-organisationId="@Model.OrganisationId">@Model.OrganisationName</a>
            </li>
            <li class="breadcrumb-item">
                <span class="@Icon.Committee"></span>
                <a asp-controller="CommitteeOverview"
                   asp-action="Index"
                   asp-route-organisationId="@Model.OrganisationId">Committees</a>
            </li>
            <li class="breadcrumb-item" aria-current="page">
                @Model.Name
            </li>
        </ol>
    </nav>
    <nav class="actionsnavbar">
        <div class="list-group list-group-horizontal">
            <a class="list-group-item list-group-item-info"
               asp-controller="Home"
               asp-action="Index">
                <span class="@Icon.Dashboard"></span> Dashboard
            </a>
            <a class="list-group-item list-group-item-info"
               asp-controller="MeetingOverview"
               asp-action="Index"
               asp-route-committeeId="@Model.CommitteeId">
                <span class="@Icon.Meeting"></span> Meetings
            </a>
        </div>
    </nav>
}


<main class="container-fluid flex-grow-1">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6 col-xl-4">
            <div class="card card-default">
                <div class="card-header d-flex flex-row justify-content-between">
                    <h4><span class="@Icon.Committee"></span> @Html.DisplayNameFor(m => m.CardTitle)</h4>
                    <div class="list-group list-group-horizontal">
                        <a class="list-group-item list-group-item-info py-1 px-2"
                           asp-controller="MeetingOverview"
                           asp-action="Index"
                           asp-route-committeeId="@Model.CommitteeId">
                            <span class="@Icon.Meeting"></span>
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label>@Html.DisplayNameFor(m => m.OrganisationName)</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <a class="btn btn-secondary"
                                   asp-controller="Organisation"
                                   asp-action="Index"
                                   asp-route-organisationid="@Model.OrganisationId">
                                    <span class="@Icon.Organisation"></span>
                                </a>                               
                            </div>
                            <div class="form-control">@Model.OrganisationName</div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>@Html.DisplayNameFor(m => m.Name)</label>
                        <div class="form-control">@Model.Name</div>
                    </div>
                    <div class="form-group">
                        <label>@Html.DisplayNameFor(m => m.Description)</label>
                        <div class="form-control">@Model.Description</div>
                    </div>
                    <a asp-controller="Committee"
                       asp-action="StartEdit"
                       asp-route-committeeId="@Model.CommitteeId"
                       asp-route-ajaxMode="0"
                       class="btn btn-primary"><span class="@Icon.Edit"></span> Edit</a>
                </div>
            </div>
        </div>
    </div>
</main>