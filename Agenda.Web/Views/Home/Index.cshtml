@model Agenda.Web.Areas.Api.Models.Home.IndexViewModel
@{
}

<div class="wrapper d-flex flex-column justify-content-between">
    @await Html.PartialAsync("../Shared/_header", Model.HeaderViewModel)

    <div class="content d-flex flex-grow-1">
        <nav class="sidebar d-none">
            <h1>Sidebar</h1></nav>
        <main class="container-fluid flex-grow-1">
            @if (Model.MeetingCardViewModels.Any())
            {

                <p>Have @Model.MeetingCardViewModels.Count meetings</p>
            }
            else
            {
                @await Html.PartialAsync("_NoRecentMeetings", Model.NoRecentMeetingsViewModel)
            }

        </main>
    </div>
    <footer>
        <h1>Footer</h1>
    </footer>
</div>

