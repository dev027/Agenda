@using Agenda.Web.Models
@model Agenda.Web.Areas.Api.Models.Home.MeetingCardViewModel

<div class="p-3 m-2" style="background-color: #@Model.BgColour">
    <a asp-controller="Meeting"
       asp-action="Index"
       asp-route-meetingId="@Model.MeetingId">
        <div class="input-group pb-3">
            <div class="input-group-prepend">
                <div class="btn btn-primary"><i class="@Icon.Organisation"></i></div>
            </div>
            <div class="form-control">@Model.OrganisationName</div>
        </div>
        <div class="input-group pb-3">
            <div class="input-group-prepend">
                <div class="btn btn-primary"><i class="@Icon.Committee"></i></div>
            </div>
            <div class="form-control">@Model.CommitteeName</div>
        </div>
        <div class="input-group pb-3">
            <div class="input-group-prepend">
                <div class="btn btn-primary"><i class="@Icon.Date"></i></div>
            </div>
            <div class="form-control">@Model.MeetingDateTime.ToString("dd-MMM ddd")</div>
        </div>
        <div class="input-group">
            <div class="input-group-prepend">
                <div class="btn btn-primary"><i class="@Icon.Location"></i></div>
            </div>
            <div class="form-control">@Model.Location</div>
        </div>
    </a>
</div>

