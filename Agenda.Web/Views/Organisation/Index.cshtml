@using Agenda.Web.Models
@using Agenda.Web.ViewModels.Organisation
@model Agenda.Web.ViewModels.Organisation.IndexViewModel

<main class="container-fluid flex-grow-1">
    <h1>@Html.DisplayNameFor(m => m.PageTitle)</h1>
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6 col-xl-4">
            <div class="card card-default">
                <div class="card-header"><h5><span class="@Icon.Organisation"></span> @Html.DisplayNameFor(m => m.CardTitle)</h5></div>
                <div class="card-body">
                    <div class="form-group">
                        <label>@Html.DisplayNameFor(m => m.Code)</label>
                        <div class="form-control">@Model.Code</div>
                    </div>
                    <div class="form-group">
                        <label>@Html.DisplayNameFor(m => m.Name)</label>
                        <div class="form-control">@Model.Name</div>
                    </div>
                    <a asp-controller="Organisation"
                       asp-action="StartEdit"
                       asp-route-id="@Model.Id"
                       asp-route-ajaxMode="0"
                       class="btn btn-primary"><span class="@Icon.Edit"></span> Edit</a>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-6 col-xl-8">
            <div class="card-header"><h5><span class="@Icon.Committee"></span> Committees</h5></div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>Action</th>
                        <th>Name</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (CommitteeViewModel committeeViewModel in Model.CommitteeViewModels)
                    {
                        @await Html.PartialAsync("_Committee", committeeViewModel)
                    }
                    </tbody>
                </table>
                <a asp-controller="Committee" asp-action="Add" class="btn btn-primary">
                    Add New Committee
                </a>
            </div>
        </div>
    </div>
</main>