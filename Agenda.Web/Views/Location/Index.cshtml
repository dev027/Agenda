@using Agenda.Web.Models
@using Agenda.Web.ViewModels.Location
@model IndexViewModel

    <main class="container-fluid flex-grow-1">
        <h1>@Html.DisplayNameFor(m => m.PageTitle)</h1>
        <div class="row justify-content-center">
            <div class="col-12 col-lg-6 col-xl-4">
                <div class="card card-default">
                    <div class="card-header"><h5><span class="@Icon.Committee"></span> @Html.DisplayNameFor(m => m.CardTitle)</h5></div>
                    <div class="card-body">
                        <div class="form-group">
                            <label>@Html.DisplayNameFor(m => m.OrganisationName)</label>
                            <div class="form-control">@Model.OrganisationName</div>
                        </div>
                        <div class="form-group">
                            <label>@Html.DisplayNameFor(m => m.Name)</label>
                            <div class="form-control">@Model.Name</div>
                        </div>
                        <div class="form-group">
                            <label>@Html.DisplayNameFor(m => m.Address)</label>
                            <div class="form-control">@Model.Address</div>
                        </div>
                        <div class="form-group">
                            <label>@Html.DisplayNameFor(m => m.What3Words)</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><img src="/img/what3word-logo.svg" alt="///" style="width: 1.5rem;" /></span>
                                </div>
                                <div class="form-control">@Model.What3Words</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>@Html.DisplayNameFor(m => m.Latitude) / @Html.DisplayNameFor(m => m.Longitude)</label>
                            <div class="form-control">@Model.Latitude,@Model.Longitude</div>
                        </div>
                        <a asp-controller="Location"
                           asp-action="StartEdit"
                           asp-route-locationId="@Model.LocationId"
                           asp-route-ajaxMode="0"
                           class="btn btn-primary"><span class="@Icon.Edit"></span> Edit</a>
                    </div>
                </div>
            </div>
        </div>
    </main>